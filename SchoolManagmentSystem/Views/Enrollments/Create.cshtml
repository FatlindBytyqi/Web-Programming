@model SchoolManagmentSystem.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<div class="container p-3 bg-light bg-opacity-10 border border-info border-start rounded ">
    <h3 class="d-flex justify-content-center">Enroll Student</h3>
    <hr />
    <div class="row d-flex justify-content-center ">
        <div class="col-md-4">
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Course" class="control-label"></label>
                    <select asp-for="CourseID" class="form-control form-select" asp-items="ViewBag.CourseID">
                        <option value="">Select Course</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Student" class="control-label"></label>
                    <select asp-for="StudentID" class="form-control form-select" asp-items="ViewBag.StudentID">
                        <option value="">Select Student</option>
                    </select>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <button class="btn btn btn-light">
        <a class="btn btn-ligt text-secondary" asp-action="Index">Back to List</a>
    </button>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
